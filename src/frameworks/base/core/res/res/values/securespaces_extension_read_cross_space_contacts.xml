<resources>

    <!-- Is the Secure Spaces extension present and enabled? -->
    <java-symbol name="securespaces_extension_read_cross_space_contacts" type="bool" />

    <bool name="securespaces_extension_read_cross_space_contacts" translatable="false">true</bool>

    <!-- Name of the Secure Spaces extension -->
    <java-symbol name="securespaces_extension_read_cross_space_contacts_name" type="string" />

    <string name="securespaces_extension_read_cross_space_contacts_name" translatable="false">READ_CROSS_SPACE_CONTACTS_EXTENSION</string>

    <!-- Major version number of extension -->
    <java-symbol name="securespaces_extension_read_cross_space_contacts_majorVersion" type="integer" />

    <integer name="securespaces_extension_read_cross_space_contacts_majorVersion" translatable="false">1</integer>

    <!-- Minor version number of extension -->
    <java-symbol name="securespaces_extension_read_cross_space_contacts_minorVersion" type="integer" />

    <integer name="securespaces_extension_read_cross_space_contacts_minorVersion" translatable="false">0</integer>

    <!-- service name of extension -->
    <java-symbol name="securespaces_extension_read_cross_space_contacts_serviceName" type="string" />

    <string name="securespaces_extension_read_cross_space_contacts_serviceName" translatable="false">
        <!-- Does not have a System Service -->
    </string>

    <!--
     List of user restrictions that this extention implements, and whether the
     user restrictions can be controlled by the device owner only:
         <restriction_name>,<device_owner_controlled_only>
    -->
    <java-symbol name="securespaces_extension_read_cross_space_contacts_userRestrictions" type="array" />

    <string-array name="securespaces_extension_read_cross_space_contacts_userRestrictions">
        <item>ss_ensure_read_cross_space_contacts,1</item>
    </string-array>

<!--     List of authorities that should prevent reading on when this restriction is active in a Space -->
    <java-symbol name="securespaces_extension_read_cross_space_contacts_authorities" type="array" />

    <string-array name="securespaces_extension_read_cross_space_contacts_authorities">
        <item>com.android.contacts</item>
        <item>contacts</item>
    </string-array>

</resources>