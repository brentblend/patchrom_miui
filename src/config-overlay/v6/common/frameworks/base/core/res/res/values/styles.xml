<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.StatusBar.EventContent">
        <item name="android:textColor">@color/statusbar_content</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textColor">@color/statusbar_content_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@null</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent.Info">
        <item name="android:textColor">@color/statusbar_content_info</item>
    </style>

     <style name="TextAppearance.StatusBar.EventContent.Time">
        <item name="android:textColor">@color/statusbar_content_time</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent.Emphasis">
        <item name="android:textColor">@color/statusbar_content_emphasis</item>
    </style>

    <style name="TextAppearance.Toast">
        <item name="android:textColor">@color/toast_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
